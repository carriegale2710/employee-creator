{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "contract.schema.json",
  "type": "object",
  "properties": {
    "id": { "type": "integer", "minimum": 1 },
    "employee": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "contracts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "department": { "type": "string" },
              "contractType": { "type": "string" },
              "salaryAmount": { "type": "number" },
              "hoursPerWeek": { "type": "integer" },
              "startDate": { "type": ["string", "null"] },
              "endDate": { "type": ["string", "null"] },
              "active": { "type": "boolean" }
            }
          }
        }
      },
      "required": ["id", "firstName", "lastName", "email"]
    },
    "department": {
      "type": "string",
      "enum": ["ENGINEERING", "SALES", "DESIGN", "MARKETING", "WHOLESALE"]
    },
    "contractType": {
      "type": "string",
      "enum": ["FULL_TIME", "PART_TIME", "CASUAL", "CONTRACT"]
    },
    "salaryAmount": { "type": "number", "minimum": 0 },
    "hoursPerWeek": { "type": "integer", "minimum": 1, "maximum": 50 },
    "startDate": { "type": ["string", "null"], "format": "date" },
    "endDate": { "type": ["string", "null"], "format": "date" },
    "active": { "type": "boolean" }
  },
  "required": [
    "id",
    "employee",
    "department",
    "contractType",
    "salaryAmount",
    "hoursPerWeek",
    "active"
  ],
  "additionalProperties": false
}
