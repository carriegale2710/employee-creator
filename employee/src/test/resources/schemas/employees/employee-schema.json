{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "firstName": { "type": "string" },
    "lastName": { "type": "string" },
    "email": { "type": "string", "format": "email" },
    "phone": { "type": "string" },
    "address": { "type": "string" },
    "status": {
      "type": "string",
      "enum": ["ACTIVE", "INACTIVE", "NEW_HIRE", "TERMINATED", "ON_LEAVE"]
    },
    "contractCount": { "type": "integer" },
    "contractEndDate": { "type": ["string", "null"], "format": "date" },
    "contracts": {
      "$ref": "../contracts/contract-list-schema.json"
    }
  },
  "required": ["id", "firstName", "lastName", "email", "phone"],
  "additionalProperties": false
}
